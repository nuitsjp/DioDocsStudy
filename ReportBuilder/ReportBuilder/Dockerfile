FROM microsoft/dotnet:2.1-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM microsoft/dotnet:2.1-sdk AS build
WORKDIR /src
COPY ["ReportBuilder/ReportBuilder.csproj", "ReportBuilder/"]
RUN dotnet restore "ReportBuilder/ReportBuilder.csproj"
COPY . .
WORKDIR "/src/ReportBuilder"
RUN dotnet build "ReportBuilder.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "ReportBuilder.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "ReportBuilder.dll"]